<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mpascal.programmaker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.mpascal.programmaker.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mpascal.programmaker.RegisterActivity"
            android:parentActivityName="com.mpascal.programmaker.LoginActivity" />

        <activity
            android:name="com.mpascal.programmaker.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.mpascal.programmaker.RoutineViewActivity"
            android:parentActivityName="com.mpascal.programmaker.MainActivity" />

    </application>

</manifest>