<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/routine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/routine_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is where the routine will show"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/routine_title"/>

        <ImageView
            android:id="@+id/delete_routine"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete_routine"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>